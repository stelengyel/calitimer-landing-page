---
import EmailForm from './EmailForm.astro';
---

<section class="hero" aria-label="Hero">
  <!-- Ambient glow decoration -->
  <div class="hero-glow" aria-hidden="true"></div>

  <div class="hero-inner">
    <div class="hero-content">
      <!-- Logo -->
      <a href="/" class="hero-logo" aria-label="CaliTimer">
        <img
          src="/logo_light.png"
          alt="CaliTimer"
          width="140"
          height="179"
          fetchpriority="high"
        />
      </a>

      <!-- Treatment C: Mono Label + DM Serif headline -->
      <div class="hero-label-row" aria-label="Category">
        <span class="mono-label">iOS App &middot; Computer Vision &middot; Calisthenics</span>
      </div>

      <h1 class="hero-headline">
        Train Smarter.<br />
        <em>Just Hold.</em>
      </h1>

      <p class="hero-sub">
        CaliTimer uses on-device computer vision to detect when you enter
        a skill position — handstand, front lever, planche — and automatically
        starts, stops, and logs your hold. No touching required.
      </p>

      <div class="hero-form">
        <EmailForm id="hero-form" />
      </div>
    </div>

    <!-- Decorative app icon visual -->
    <div class="hero-visual" aria-hidden="true">
      <div class="icon-glow"></div>
      <div class="icon-frame">
        <img
          src="/app-icon.png"
          alt=""
          width="180"
          height="180"
          fetchpriority="high"
          class="app-icon"
        />
      </div>
      <!-- Floating skill tags -->
      <div class="skill-tag skill-tag--1">
        <span class="skill-dot"></span>
        Handstand
      </div>
      <div class="skill-tag skill-tag--2">
        <span class="skill-dot"></span>
        Front Lever
      </div>
      <div class="skill-tag skill-tag--3">
        <span class="skill-dot"></span>
        Planche
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    overflow: hidden;
    padding: 64px 24px 80px;
  }

  /* Ambient glow behind the visual */
  .hero-glow {
    position: absolute;
    top: -80px;
    right: -120px;
    width: 700px;
    height: 700px;
    background: radial-gradient(ellipse, rgba(255, 107, 43, 0.07) 0%, transparent 65%);
    pointer-events: none;
  }

  .hero-inner {
    max-width: 1100px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 64px;
    align-items: center;
  }

  .hero-content {
    max-width: 580px;
  }

  /* Logo */
  .hero-logo {
    display: inline-block;
    margin-bottom: 40px;
  }

  .hero-logo img {
    width: 140px;
    height: auto;
    opacity: 0.9;
  }

  /* Treatment C — Mono label */
  .hero-label-row {
    margin-bottom: 16px;
  }

  .mono-label {
    font-family: var(--font-mono);
    font-size: 11px;
    letter-spacing: 0.14em;
    text-transform: uppercase;
    color: var(--ember);
  }

  /* Headline */
  .hero-headline {
    font-family: var(--font-display);
    font-size: clamp(44px, 6vw, 68px);
    line-height: 1.05;
    letter-spacing: -0.02em;
    color: var(--text-primary);
    margin-bottom: 24px;
  }

  .hero-headline em {
    font-style: italic;
    background: var(--grad-brand);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Subheadline */
  .hero-sub {
    font-size: 17px;
    color: var(--text-secondary);
    line-height: 1.7;
    margin-bottom: 40px;
    max-width: 480px;
  }

  .hero-form {
    /* Form inherits full width of content column */
  }

  /* ── Visual ── */
  .hero-visual {
    position: relative;
    width: 260px;
    height: 320px;
    flex-shrink: 0;
  }

  .icon-glow {
    position: absolute;
    inset: -40px;
    background: radial-gradient(ellipse, rgba(255, 107, 43, 0.18) 0%, transparent 70%);
    pointer-events: none;
  }

  .icon-frame {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 160px;
    height: 160px;
    border-radius: 36px;
    overflow: hidden;
    box-shadow:
      0 0 0 1px rgba(255, 107, 43, 0.2),
      0 32px 80px rgba(0, 0, 0, 0.6),
      0 0 60px rgba(255, 107, 43, 0.12);
  }

  .app-icon {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Floating skill tags */
  .skill-tag {
    position: absolute;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: var(--surface-raised);
    border: 1px solid var(--border-mid);
    border-radius: var(--radius-sm);
    padding: 8px 14px;
    font-size: 12px;
    font-weight: 500;
    color: var(--text-secondary);
    white-space: nowrap;
  }

  .skill-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--ember);
    box-shadow: 0 0 0 3px var(--ember-subtle);
    flex-shrink: 0;
  }

  .skill-tag--1 {
    top: 20px;
    right: -20px;
  }

  .skill-tag--2 {
    bottom: 60px;
    right: -30px;
  }

  .skill-tag--3 {
    bottom: 20px;
    left: -10px;
  }

  /* ── Responsive ── */
  @media (max-width: 900px) {
    .hero-inner {
      grid-template-columns: 1fr;
      gap: 48px;
    }
    .hero-visual {
      display: none;
    }
  }

  @media (max-width: 600px) {
    .hero {
      padding: 48px 20px 64px;
    }
    .hero-logo {
      margin-bottom: 32px;
    }
    .hero-logo img {
      width: 120px;
    }
    .hero-sub {
      font-size: 16px;
    }
  }
</style>

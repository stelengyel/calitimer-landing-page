---
import EmailForm from './EmailForm.astro';
---

<section class="hero" aria-label="Hero">
  <!-- Ambient glow decoration -->
  <div class="hero-glow" aria-hidden="true"></div>

  <div class="hero-inner">
    <div class="hero-content">
      <h1 class="hero-headline">
        Train Smarter.<br />
        <em>Just Hold.</em>
      </h1>

      <p class="hero-sub">
        CaliTimer uses on-device computer vision to detect when you enter
        a skill position — handstand, front lever, planche — and automatically
        starts, stops, and logs your hold. No touching required.
      </p>

      <div class="hero-form">
        <EmailForm id="hero-form" />
      </div>
    </div>

  </div>
</section>

<style>
  .hero {
    position: relative;
    overflow: hidden;
    padding: 64px 24px 80px;
  }

  /* Ambient glow behind the visual */
  .hero-glow {
    position: absolute;
    top: -80px;
    right: -120px;
    width: 700px;
    height: 700px;
    background: radial-gradient(ellipse, rgba(255, 107, 43, 0.07) 0%, transparent 65%);
    pointer-events: none;
  }

  .hero-inner {
    max-width: 680px;
    margin: 0 auto;
  }

  .hero-content {
    max-width: 580px;
  }

  /* Headline */
  .hero-headline {
    font-family: var(--font-display);
    font-size: clamp(44px, 6vw, 68px);
    line-height: 1.05;
    letter-spacing: -0.02em;
    color: var(--text-primary);
    margin-bottom: 24px;
  }

  .hero-headline em {
    font-style: italic;
    background: var(--grad-brand);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Subheadline */
  .hero-sub {
    font-size: 17px;
    color: var(--text-secondary);
    line-height: 1.7;
    margin-bottom: 40px;
    max-width: 480px;
  }

  .hero-form {
    /* Form inherits full width of content column */
  }


  @media (max-width: 600px) {
    .hero {
      padding: 48px 20px 64px;
    }
    .hero-sub {
      font-size: 16px;
    }
  }
</style>
